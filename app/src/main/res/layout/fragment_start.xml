<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/shoppingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_basic"
        android:padding="@dimen/padding_basic"
        android:text="Shopping List"
        app:layout_constraintBottom_toTopOf="@id/offer"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_basic"
        android:padding="@dimen/padding_basic"
        android:text="Offer"
        app:layout_constraintBottom_toTopOf="@id/compare"
        app:layout_constraintTop_toBottomOf="@id/shoppingList" />

    <Button
        android:id="@+id/compare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_basic"
        android:padding="@dimen/padding_basic"
        android:text="Compare"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/offer" />

</androidx.constraintlayout.widget.ConstraintLayout>