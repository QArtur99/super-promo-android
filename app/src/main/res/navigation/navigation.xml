<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/fragment_start">

    <fragment
        android:id="@+id/fragment_start"
        android:name="com.superpromo.superpromo.ui.main.MainFragment"
        android:label="StartFragment">

        <action
            android:id="@+id/action_start_to_compare"
            app:destination="@id/fragment_compare" />
        <action
            android:id="@+id/action_start_to_offer"
            app:destination="@id/fragment_offer" />
    </fragment>

    <fragment
        android:id="@+id/fragment_shopping_list"
        android:name="com.superpromo.superpromo.ui.main.MainFragment"
        android:label="StartFragment">

    </fragment>

    <fragment
        android:id="@+id/fragment_offer"
        android:name="com.superpromo.superpromo.ui.offer.OfferFragment"
        android:label="OfferFragment">

        <action
            android:id="@+id/action_offer_to_compare"
            app:destination="@id/fragment_compare" />
    </fragment>

    <fragment
        android:id="@+id/fragment_compare"
        android:name="com.superpromo.superpromo.ui.compare.CompareFragment"
        android:label="CompareFragment">

        <argument
            android:name="shopId"
            app:argType="string"
            app:nullable="true" />

        <action
            android:id="@+id/action_compare_to_suggestion"
            app:destination="@id/fragment_suggestion_product" />
    </fragment>

    <fragment
        android:id="@+id/fragment_suggestion_product"
        android:name="com.superpromo.superpromo.ui.suggestion.SuggestionFragment"
        android:label="SuggestionFragment">

        <argument
            android:name="query"
            app:argType="string"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/fragment_shopping_list_archvied"
        android:name="com.superpromo.superpromo.ui.main.MainFragment"
        android:label="StartFragment">

    </fragment>
</navigation>
